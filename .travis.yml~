sudo: required
services: 
    -docker
language: go
install: true
script:
    - go vet $(go list ./... | grep -v vendor)
    - go build .
    - docker image build -t birdpedia .
after_success:
    - if [ -n "${TRAVIS_TAG}" ] ; then
        docker login -u="${DOCKER_USER}" -p="${DOCKER_PASSWORD}";
        docker push birdpedia;
      fi
